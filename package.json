{
  "name": "@wizardalice/scaffold-manager",
  "version": "0.1.1",
  "description": "scaffold manager tools",
  "scripts": {
    "eslint": "eslint bin lib --ext .ts --fix",
    "build": "rimraf dist && tsc && rollup -c",
