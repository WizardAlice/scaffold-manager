    "rollup-plugin-node-resolve": "^5.2.0",
    "semver": "^7.3.7",
    "tsup": "^5.12.6",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "adm-zip": "^0.5.9",
    "log-symbols": "^5.1.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "axios": "^0.27.2",
    "iconv-lite": "^0.6.3",
    "inquirer": "^8.2.4"
  },
