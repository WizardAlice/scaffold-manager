    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "mocha": "^9.2.2",
    "ora": "^6.1.0",
    "prettier": "^2.6.1",
    "rollup": "^2.70.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-cleandir": "^2.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
