    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.173",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.30",
    "@types/y18n": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-plugin-external-helpers": "^6.22.0",
